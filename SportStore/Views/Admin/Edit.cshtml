@model Product
@{ 
    ViewBag.Title = "Редактирование продукта";
    Layout = "_AdminLayout";
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Discription">Описание товара</label>
        <div><span asp-validation-for="Discription" class="text-danger"></span></div>
        <textarea asp-for="Discription" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Category">Категория товара</label>
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Цена</label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="text-center">
       <button class="btn btn-primary" type="submit">Сохранить изменения</button>
        <a asp-action="Index" class="btn btn-secondary">Отмениить</a>
    </div>
</form>